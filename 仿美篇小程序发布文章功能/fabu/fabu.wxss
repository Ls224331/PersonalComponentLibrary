/* pages/others/xscroll/xscroll.wxss */

.recommend_scroll_x_box {
  height: 400rpx;
  padding: 100rpx 0;
  white-space: nowrap;
  display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommend_hot_box:first-child {
  margin-left: 24rpx;
}

.recommend_hot_box {
  width:100%;height:151px;
  display: inline-block;
}

.recommend_hot_image {
  width:100%;height:151px;
}

.title {
  font-size: 26rpx;
}

.desc {
  font-size: 24rpx;
}

.title, .desc {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.country_one{
  width:19%;
  height:72rpx;
  border-radius: 8rpx;
  line-height: 65rpx;
  border:none;
  text-align: center;
  float:left;
  margin:5px 10px;
  font-size:30rpx;
  background: #FBFBFB;
  color:#333;
}

.country_one.on{
    color: #E22417;
    border: none;
    background: #FBFBFB;    
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  height:100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}
.drawer_attr_content {
  padding: 20rpx;
  height: 100%;
  overflow-y: scroll;
}